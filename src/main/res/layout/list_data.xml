<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradasi2"
    android:orientation="vertical">
    <TextView
        android:id="@+id/id_barang"
        android:text="{id_barang}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/kode"
        android:text="{kode_barang}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/nama"
        android:text="{nama_barang}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/sizel"
        android:text="{size}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/jumlahl"
        android:text="{jumlah}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/lihat"
            android:text="Lihat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/edit"
            android:text="Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/hapus"
            android:text="Hapus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>
